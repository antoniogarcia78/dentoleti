{% extends '::main.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/dentoletigeneral/css/bootstrap.min.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/dentoletigeneral/css/bootstrap-theme.min.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/dentoletigeneral/css/dentoleti.css') }}">
{% endblock %}

{% block header %}
<header>
    <div class="container">
        <div class="row-fluid">
            <div id="logo" class="span6"><a href="{{ path('portada') }}"><img src="{{ asset('bundles/dentoletigeneral/images/logo.png')}}"></a></div>
            <div id="user-info" class="span6 pull-right">{% include'DentoletiGeneralBundle:Default:user-info.html.twig' %}</div>
        </div>
    </div>
    {% include 'DentoletiGeneralBundle:Default:menu.html.twig' %}
</header>
{% endblock %}

{% block body %}
<div id="contenedor">
    <aside>
        {# Basic data of the entity that is being showing, i.e. patient, traeatment, budget, doctor, etc #}
        {% block aside %}{% endblock %}
    </aside>
    <section>
        <article>
            {# Maybe, Dentoleti should show another articles for the patient's history that are most visited or
            the last patients that have been shown#}
            {% block search %}{% endblock %}
        </article>
        <article>
            {%  block results %}{% endblock %}
        </article>
        <article>
            {%  block add %}{% endblock %}
        </article>
        <article>
            {%  block view %}{% endblock %}
        </article>
    </section>
</div>
{% endblock %}