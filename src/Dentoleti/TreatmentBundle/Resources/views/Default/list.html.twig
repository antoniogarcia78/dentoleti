<table id="list">
    <tr>
        <th>id</th>
        <th>Fecha de registro</th>
        <th>Presupuesto</th>
        <th>Paciente</th>
        <th>Ver</th>
        <th>Editar</th>
        <th>Eliminar</th>
    </tr>
    {% for treatment in treatmentList %}
        <tr>

            <td>{{ treatment.id }}</td>
            <td>{{ treatment.treatmentDate | date('d-m-Y') }}</td>
            <td>{{ treatment.budget }}</td>
            <td>{{ treatment.budget.patient }}</td>
            <td>
                <a href="{{ path('treatment_view', { 'id': treatment.id }) }}"><img
                            src="{{ asset('bundles/dentoletigeneral/images/icons/eye.png') }}"></a>
            </td>
            <td>
                <a href="{{ path('treatment_edit', { 'id': treatment.id }) }}"><img
                            src="{{ asset('bundles/dentoletigeneral/images/icons/edit.png') }}"></a>
            </td>
            <td>
                <a href="{{ path('treatment_delete', { 'id': treatment.id }) }}"><img
                            src="{{ asset('bundles/dentoletigeneral/images/icons/erase.png') }}"></a>
            </td>
        </tr>
    {% endfor %}
</table>