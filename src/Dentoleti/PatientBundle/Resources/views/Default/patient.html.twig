{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        var path = '{{ path('load_provinces') }}';
        // When cp change
        $("#patient_postalCode").change(function() {
            var data = {
                cp_id: $(this).val()
            };
            $.ajax({
                type: 'POST',
                url: path,
                data: data,
                success: function(data) {
                    $('#patient_town').html(data);
                }
            });
        });
    </script>
